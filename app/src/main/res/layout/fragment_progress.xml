<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Progress ðŸ“Š"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A snapshot of your consistency"
            android:textSize="14sp"
            android:alpha="0.6"
            android:layout_marginTop="4dp"/>

        <!-- Top Circular Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="2">

            <!-- Tasks Completed -->
            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="@color/card_bg"
                android:layout_width="0dp"
                app:cardCornerRadius="20dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:radius="32dp"
                android:elevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tasksCompletedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="34sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tasks This Week"
                        android:textSize="14sp"
                        android:alpha="0.7"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Highest Streak -->
            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="@color/card_bg"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="20dp"
                android:radius="32dp"
                android:elevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/highestStreakText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 days"
                        android:textSize="28sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Streak ðŸ”¥"
                        android:textSize="14sp"
                        android:alpha="0.7"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Weekly Productivity -->
        <com.google.android.material.card.MaterialCardView
            app:cardBackgroundColor="@color/card_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="20dp"
            android:radius="36dp"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Productivity"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <ProgressBar
                    android:id="@+id/productivityBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:max="100"
                    android:layout_marginTop="14dp"/>

                <TextView
                    android:id="@+id/productivityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.7"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Insight Card -->
        <com.google.android.material.card.MaterialCardView
            app:cardBackgroundColor="@color/card_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:radius="40dp"
            app:cardCornerRadius="20dp"
            android:elevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ˆ Weekly Insight"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You perform best when you complete habits before noon."
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.7"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Footer Motivation -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ¨ Progress, not perfection"
            android:textSize="14sp"
            android:layout_marginTop="28dp"
            android:layout_gravity="center"
            android:alpha="0.6"/>

    </LinearLayout>
</ScrollView>
